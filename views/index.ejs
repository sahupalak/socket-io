<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
</head>
<body>
    <!-- <div class="bg-zinc-200 p-10 y-10"> -->
        <h1 class="text-blue text-3xl mb-4">Hello</h1>
    <input type="text" class="p-4 rounded-md border-4" placeholder="enter name">
    <!-- </div> -->

    <script src="https://cdn.socket.io/4.7.5/socket.io.min.js" integrity="sha384-2huaZvOR9iDzHqslqwpR87isEmrfxqyWOF7hr7BY6KG0+hVKLoEXMPUJw3ynWuhO" crossorigin="anonymous"></script>
<script>
    const socket = io();

    document.querySelector('input').addEventListener('input', (event) =>{
        const username =  event.target.value
        socket.emit('check',username );
        
    })
    
       socket.on('result',isUsernameTaken =>{
        console.log(isUsernameTaken);

        if(isUsernameTaken){
        document.querySelector('input').style.outlineColor = 'red'
    }else{
        document.querySelector('input').style.outlineColor = 'green'
    }
       })

</script>
</body>
</html>